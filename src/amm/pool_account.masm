use.miden::account
use.std::sys
use.miden::contracts::wallets::basic->wallet

# acct proc 0
export.wallet::receive_asset

# acc proc 1
export.get_assets
    push.1
    add
    debug.stack
    drop
end

# internal procedure
# [tokenBalX, tokenBalY, tokenAmountInX]
# [x, y, dx]
proc.calculate_amount_y_out
    dup.2
    # [dx, x, y, dx]

    movup.2
    # [y, dx, x, dx]

    mul
    div.1000000
    # [dx * y, x, dx]

    swap.2
    # [dx, x, dx * y]

    add
    # [dx + x, dx * y]

    # divide by 1e3 to have some floating point
    div.1000

    # note when dividing...
    # a / b
    # [b, a]
    u32div

end

# acct proc 2

# [tokenIn, ZERO, ZERO, amountIn, tokenOut, recipient, maxSlippage]
export.swap
    push.11111
    debug.stack
    drop

    # store tokenIn, tokenOut @ memory address 0, 1
    mem_store.0

    swap.4

    mem_store.1

    # store recipient @ memory address 5
    swap.2
    mem_store.5
    swap

    # store amountIn X @ memory address 2
    swap
    mem_store.2

    # tokenIn, tokenOut balance @ memory address 3, 4
    mem_load.0
    exec.account::get_balance
    mem_store.3

    mem_load.1
    exec.account::get_balance
    mem_store.4

    mem_load.2
    push.0.0
    mem_load.0

    exec.wallet::receive_asset
    dropw

    mem_load.3
    mem_load.4

    # stack
    # ├──  0: tokenB balance
    # ├──  1: tokenA balance

    mul.1000
    swap
    mul.1000
    swap

    # stack
    # ├──  0: tokenB balance scaled 1e3
    # ├──  1: tokenA balance scaled 1e3

    # load amount in X
    mem_load.2
    mul.1000
    swap.2

    exec.calculate_amount_y_out

    mem_store.3 # overwrite tokenInAmount

    mem_load.5      # recipient (sender)
    push.2          # note type offchain
    push.3758096384 # tag
    mem_load.3      # token amount
    push.0.0        # zero zero
    mem_load.1      # tokenOut

    push.22222
    debug.stack
    drop

    # ├──  0: 2305843009213693999 # tokenOut
    # ├──  1: 0                   # ZERO
    # ├──  2: 0                   # ZERO
    # ├──  3: 91                  # amountOut
    # ├──  4: 3758096384          # tag
    # ├──  5: 2                   # noteType
    # ├──  6: 9223372036854775839 # recipient

    exec.wallet::send_asset
    drop

    push.1
    exec.account::incr_nonce
    exec.sys::truncate_stack

end
