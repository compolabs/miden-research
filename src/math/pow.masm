# [b, a]
proc.UD14x6_mul
    u32div.1000
    swap
    u32div.1000
    swap
    mul
end

# assumes 1e6 base
# [b, a]
proc.UD14x6_div
    div.1000
    u32div
    mul.1000
end

# Mercator Series Expansion for Natural Logarithm (ln)
# The series expansion used is derived from the transformation y = (x - 1) / (x + 1) and is given by:
# ln(x) = 2 * (y + y^3 / 3 + y^5 / 5 + y^7 / 7 + ...)
# where y = (x - 1) / (x + 1)
# This series converges for x > 0 and is especially useful for values of x near 1.
# This function has not been tested and lacks precision
proc.log
    mem_store.0 # save x to mem addr 0
    push.ONE

    # x - 1
    mem_load.0
    swap
    # [1e6, x]
    exec.signed_sub
    mem_store.1

    # x + 1
    mem_load.0
    push.ONE
    add # x can't be negative

    mem_store.2

    mem_load.1
    mem_load.2

    exec.UD14x6_div

    # y = (x - 1) / (x + 1)

    dup dup
    mem_store.1 # summation
    mem_store.2 # term

    # [y]
    dup
    exec.UD14x6_mul

    # [y*y]
    mem_store.3 # y2

    # []

    push.ONE
    mem_store.4 # COUNTER

    # []

    # number of loops for # of elements in the expansion
    repeat.7
        mem_load.2 # term
        mem_load.3 # y2

        exec.UD14x6_mul

        dup
        mem_store.2 # store term *= y2

        mem_load.4 # counter
        push.2000000 # 2
        add # counter + 2

        exec.UD14x6_div

        mem_load.1
        add # summation += term / (counter + 2)
        mem_store.1

        # increment counter
        mem_load.4
        push.TWO
        add
        mem_store.4

    end

    # 2 * summation
    mem_load.1
    push.TWO
    exec.UD14x6_mul

end

proc.exp
    mem_store.0 # x

    push.ONE
    dup dup

    mem_store.1 # counter
    mem_store.2 # term
    mem_store.3 # sum

    # start loop
    repeat.7
        # term *= x / counter
        # sum += term
        mem_load.0 # x
        mem_load.1 # counter

        exec.UD14x6_div # x / i

        mem_load.2 # load term
        exec.UD14x6_mul # term * (x / i)
        dup
        mem_store.2 # store term

        mem_load.3 # load sum
        add # sum += term
        mem_store.3 # store sum

        # increment counter
        mem_load.1
        push.ONE
        add
        mem_store.1

    end

    # return sum
    mem_load.3

end

# a^b
# [b, a]
# where a, b are UD14x6 fixed point numbers
proc.pow
    # return exp(exponent * log(base))
    swap
    exec.log

    exec.UD14x6_mul
    # exponent * log(base)

    exec.exp

end

