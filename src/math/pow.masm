# is 1e6 base number odd
# using memory addresses 10 & 11
proc.is_odd
    dup
    mem_store.10
    push.1000000
    # x % 1e6
    u32mod
    swap
    gt
    if.true
        # x % 1e6 > 0
        push.1
        mem_store.11
    else
        # check if x / 1e6 % 2 == 0
        mem_load.10
        div.1000000
        push.2
        u32mod
        if.true
            # x % 2 != 0
            push.1
            mem_store.11
        else
        end
    end
    # return memory address 11
    mem_load.11
end

